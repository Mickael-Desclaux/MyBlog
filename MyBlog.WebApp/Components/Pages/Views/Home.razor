<div class="last_readings">
    <div class="last_readings-container">
        <h3>My Latest Readings</h3>
        <div class="articles-container">
            @foreach (var article in Articles)
            {
                <div class="article_card">
                    <h4><b>@article.BookTitle by @article.BookAuthor</b></h4>
                    <div class="article_card-container">
                        <img class="book_cover" src="@GetBookCover(article.BookCover)" alt="Cover" />
                        <p>@article.MyNote</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (IsUserAuthenticated)
{
    <p>Email de l'utilisateur connecté : @userEmail</p>
    <button @onclick="Logout">Déconnexion</button>
}