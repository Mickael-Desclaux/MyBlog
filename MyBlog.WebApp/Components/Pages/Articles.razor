@page "/Articles"
@inherits ArticlesBase
@rendermode @(new InteractiveServerRenderMode(prerender: false))
<h1>Articles</h1>
<table>
    <thead>
    <tr>
        <td>ArticleId</td>
        <td>TagIds</td>
        <td>BookAuthor</td>
        <td>BookTitle</td>
        <td>BookNumberOfPages</td>
        <td>BookCover</td>
        <td>TextSection</td>
        <td>BookResume</td>
        <td>ReviewResume</td>
        <td>MyNote</td>
        <td>Quotes</td>
        <td>CreatedAt</td>
        <td>UpdatedAt</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var article in Article)
    {
        <tr>
            <td>@article.ArticleId</td>
            <td>@article.TagIds</td>
            <td>@article.BookAuthor</td>
            <td>@article.BookTitle</td>
            <td>@article.BookNumberOfPages</td>
            <td>@article.BookCover</td>
            <td>@article.TextSection</td>
            <td>@article.BookResume</td>
            <td>@article.ReviewResume</td>
            <td>@article.MyNote</td>
            <td>@article.Quotes</td>
            <td>@article.CreatedAt</td>
            <td>@article.UpdatedAt</td>
        </tr>
    }
    </tbody>
</table>
